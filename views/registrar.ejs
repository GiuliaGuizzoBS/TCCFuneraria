<%- include('partials/navbarCliente') %>

<main class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
  <div class="col-md-6 col-lg-5 p-4 bg-marrom-clarinho rounded shadow">
    <div class="text-center mb-3">
      <img src="/imagens/pombabrancalogo.png" alt="Pomba Branca" width="80" height="40" class="d-inline-block align-top">
    </div>

    <h2 class="mb-4 text-center texto-marrom">Criar Conta</h2>

    <% if (erro) { %>
      <div class="alert alert-danger text-center">
        <%= erro %>
      </div>
    <% } %>

    <% if (sucesso) { %>
      <div class="alert alert-success text-center">
        <%= sucesso %>
      </div>
    <% } %>

    <form action="/registrar" method="POST">
      <div class="form-group">
        <label for="username" class="texto-marrom">Usuário</label>
        <input 
          type="text" 
          name="username" 
          id="username" 
          class="form-control" 
          placeholder="Digite seu usuário" 
          required
        >

        <label for="password" class="texto-marrom mt-3">Senha</label>
        <input 
          type="password" 
          name="password" 
          id="password" 
          class="form-control" 
          placeholder="Digite sua senha" 
          required
        >
      </div>

      <button type="submit" class="btn btn-marrom w-100 mt-4">
        Registrar
      </button>
    </form>

    <div class="text-center mt-3">
      <p class="texto-marrom">Já tem uma conta?</p>
      <a href="/login" class="btn btn-outline-marrom w-100">Entrar</a>
    </div>
  </div>
</main>
