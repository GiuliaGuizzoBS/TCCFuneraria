<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Formulário Funerária</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

  <style>
    body {
      background-color: #d9c8b8;
      margin: 0;
      padding: 0;
      font-family: Arial, sans-serif;
      color: #4b2e1e;
    }

    .form-container {
      background-color: #fff8eb;
      border: 1px solid #d9c8b8;
      border-radius: 15px;
      padding: 2rem;
      margin: 2rem auto;
      max-width: 800px;
    }

    .titulo-centralizado {
      text-align: center;
      color: #57330f;
      margin-bottom: 1.5rem;
    }

    label {
      color: #57330f;
      font-weight: 500;
      margin-top: 0.5rem;
      display: block;
    }

    input.form-control,
    select.form-control,
    textarea.form-control {
      border: 1px solid #d9c8b8;
      border-radius: 8px;
      padding: 0.6rem;
      background-color: #fffdf8;
      color: #57330f;
      margin-bottom: 1rem;
      width: 100%;
      font-size: 1rem;
    }

    input.form-control:focus,
    select.form-control:focus,
    textarea.form-control:focus {
      border-color: #bfa68a;
      outline: none;
    }

    textarea.form-control {
      resize: none;
      height: 80px;
    }

    .btn-marrom {
      background-color: #57330f;
      color: #fff;
      border: none;
      border-radius: 8px;
      padding: 0.6rem 1.2rem;
      font-weight: 500;
      text-decoration: none;
      width: 140px;
      display: inline-block;
      text-align: center;
      transition: background-color 0.2s;
      margin-top: 0.5rem;
    }

    .btn-marrom:hover {
      background-color: #6a3d13;
      color: #fff;
    }

    .form-group {
      margin-bottom: 1rem;
    }
  </style>
</head>
<body>
  <%- include('partials/navbarCliente') %>

  <div class="form-container">
    <h2 class="titulo-centralizado"><strong>Formulário de Contratação</strong></h2>

    <form action="/formulario" method="POST" enctype="multipart/form-data">

      <!-- Dados do Cliente -->
      <h4 class="texto-marrom">Dados do Cliente</h4>
      <div class="form-group">
        <label>Nome do Cliente:</label>
        <input type="text" name="cliente" placeholder="Nome completo do contratante" class="form-control" required>
      </div>

      <!-- Endereço -->
      <h4 class="texto-marrom">Endereço do Cliente</h4>
      <div class="form-group">
        <label>Número:</label>
        <input type="text" name="numero" placeholder="Número da residência" class="form-control" required>
        <label>Rua:</label>
        <input type="text" name="rua" placeholder="Nome da rua" class="form-control" required>
        <label>Bairro:</label>
        <input type="text" name="bairro" placeholder="Bairro" class="form-control" required>
        <label>Cidade:</label>
        <input type="text" name="cidade" placeholder="Cidade" class="form-control" required>
        <label>Estado:</label>
        <input type="text" name="estado" placeholder="Estado" class="form-control" required>
        <label>País:</label>
        <input type="text" name="pais" placeholder="País" class="form-control" required>
      </div>

      <!-- Informações do Serviço -->
      <h4 class="texto-marrom">Informações do Serviço</h4>
      <div class="form-group">
        <label>Cremar?</label>
        <select name="cremacao" class="form-control" required>
          <option value="0">Não</option>
          <option value="1">Sim</option>
        </select>
        <label>Translado:</label>
        <input type="text" name="translado" placeholder="Local de translado do falecido, se houver" class="form-control">
      </div>

      <!-- Necromaquiagem -->
      <h4 class="texto-marrom">Necromaquiagem</h4>
      <div class="form-group">
        <label>Roupas:</label>
        <input name="roupa" placeholder="Peças de roupa do falecido" class="form-control">
        <label>Roupas íntimas?</label>
        <select name="r_intimas" class="form-control">
          <option value="0">Não</option>
          <option value="1">Sim</option>
        </select>
        <label>Batom:</label>
        <input name="batom" placeholder="Ex.: Rosa claro" class="form-control">
        <label>Cor da unha:</label>
        <input name="unha" placeholder="Ex.: Apenas uma base" class="form-control">
        <label>Intensidade da maquiagem</label>
        <select name="intensidade" class="form-control">
          <option value="0">Fraca</option>
          <option value="1">Média</option>
          <option value="2">Forte</option>
        </select>
        <label>Observação:</label>
        <textarea name="observacao" placeholder="Ex.: Fazer um coração na bochecha" class="form-control"></textarea>
      </div>

      <!-- Laboratório -->
      <h4 class="texto-marrom">Laboratório</h4>
      <div class="form-group">
        <label><input type="checkbox" name="embalsamamento" value="1"> Embalsamamento</label>
        <label><input type="checkbox" name="tanatopraxia" value="1"> Tanatopraxia</label>
        <label><input type="checkbox" name="aspiracao" value="1"> Aspiração</label>
        <label><input type="checkbox" name="restauracao" value="1"> Restauração</label>
        <label><input type="checkbox" name="mumificacao" value="1"> Mumificação</label>
        <label><input type="checkbox" name="higienizacao" value="1"> Higienização</label>
      </div>

      <!-- Cama Ardente -->
      <h4 class="texto-marrom">Cama Ardente</h4>
      <div class="form-group">
        <label><input type="checkbox" name="cortina" value="1"> Cortina</label>
        <label><input type="checkbox" name="tapete" value="1"> Tapete</label>
        <label><input type="checkbox" name="livropre" value="1"> Livro de Presenças</label>
        <label><input type="checkbox" name="veleiro" value="1"> Veleiro</label>
        <label><input type="checkbox" name="cristo" value="1"> Cristo</label>
        <label><input type="checkbox" name="biblia" value="1"> Bíblia</label>
        <label><input type="checkbox" name="cavalete" value="1"> Cavalete</label>
      </div>

      <!-- Dados do Falecido -->
      <h4 class="texto-marrom">Dados do Falecido</h4>
      <div class="form-group">
        <label>Nome completo:</label>
        <input name="falecido_nome" placeholder="Nome completo do falecido" class="form-control" required>
        <label>Idade:</label>
        <input name="falecido_idade" type="number" placeholder="Idade do falecido" class="form-control">
        <label>CPF:</label>
        <input name="falecido_cpf" placeholder="CPF do falecido" class="form-control">
        <label>RG:</label>
        <input name="falecido_rg" placeholder="RG do falecido" class="form-control">
        <label>Data do falecimento:</label>
        <input name="falecido_data_falecimento" type="date" class="form-control">
        <label>Local do falecimento:</label>
        <input name="falecido_local_falecimento" placeholder="Local do falecimento" class="form-control">
        <label>Foto do Falecido:</label>
        <input type="file" name="foto_falecido" accept="image/*" class="form-control">
        <label>Comprovante de Residência:</label>
        <input type="file" name="comprovante_residencia" accept="image/*" class="form-control">
      </div>

      <!-- Pagamento -->
      <h4 class="texto-marrom">Pagamento</h4>
      <div class="form-group">
        <label>Forma de pagamento:</label>
        <select name="forma_de_pagamento" class="form-control" required>
          <option value="dinheiro">Dinheiro</option>
          <option value="cartao">Cartão</option>
          <option value="pix">Pix</option>
        </select>
      </div>

      <div class="text-center">
        <button type="submit" class="btn-marrom">Enviar</button>
      </div>
    </form>
  </div>
</body>
</html>
