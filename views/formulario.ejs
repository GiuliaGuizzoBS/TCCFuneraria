<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Formulário Funerária</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
    <%- include('partials/navbarCliente') %>
<main class="container-body">
    <div class="container mt-5">
        <h2 class="titulo-centralizado">Cadastro - Serviços Funerários</h2>

        <form action="/formulario" method="POST" class="bg-marrom-clarinho p-4 rounded">

            <!-- Endereço -->
            <h4 class="texto-marrom">Endereço</h4>
            <div class="form-row">
                <div class="form-group col-md-2">
                    <label for="numero">Número</label>
                    <input type="number" class="form-control" name="numero" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="rua">Rua</label>
                    <input type="text" class="form-control" name="rua" required maxlength="40">
                </div>
                <div class="form-group col-md-3">
                    <label for="bairro">Bairro</label>
                    <input type="text" class="form-control" name="bairro" required maxlength="15">
                </div>
                <div class="form-group col-md-3">
                    <label for="cidade">Cidade</label>
                    <input type="text" class="form-control" name="cidade" required maxlength="15">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="estado">Estado</label>
                    <input type="text" class="form-control" name="estado" required maxlength="20">
                </div>
                <div class="form-group col-md-4">
                    <label for="pais">País</label>
                    <input type="text" class="form-control" name="pais" required maxlength="15">
                </div>
            </div>

            <hr>

            <!-- Necromaquiagem -->
            <h4 class="texto-marrom">Necromaquiagem</h4>
            <div class="form-group">
                <label for="roupa">Roupa</label>
                <input type="text" class="form-control" name="roupa" maxlength="100">
            </div>
            <div class="form-group">
                <label for="r_intimas">Roupas Íntimas</label>
                <select class="form-control" name="r_intimas">
                    <option value="1">Sim</option>
                    <option value="0">Não</option>
                </select>
            </div>
            <div class="form-row">
                <div class="form-group col-md-3">
                    <label for="batom">Batom</label>
                    <input type="text" class="form-control" name="batom" maxlength="10">
                </div>
                <div class="form-group col-md-3">
                    <label for="unha">Unha</label>
                    <input type="text" class="form-control" name="unha" maxlength="20">
                </div>
                <div class="form-group col-md-6">
                    <label for="observacao">Observação</label>
                    <input type="text" class="form-control" name="observacao" maxlength="100">
                </div>
            </div>
            <div class="form-group">
                <label for="intensidade">Intensidade</label>
                <select class="form-control" name="intensidade">
                    <option value="1">Sim</option>
                    <option value="0">Não</option>
                </select>
            </div>

            <hr>

            <!-- Laboratório -->
            <h4 class="texto-marrom">Laboratório</h4>
            <div class="form-row">
                <div class="form-group col-md-2">
                    <label for="embacamento">Embalçamento</label>
                    <select class="form-control" name="embacamento">
                        <option value="1">Sim</option>
                        <option value="0">Não</option>
                    </select>
                </div>
                <div class="form-group col-md-2">
                    <label for="tanatopraxia">Tanatopraxia</label>
                    <select class="form-control" name="tanatopraxia">
                        <option value="1">Sim</option>
                        <option value="0">Não</option>
                    </select>
                </div>
                <div class="form-group col-md-2">
                    <label for="aspiracao">Aspiração</label>
                    <select class="form-control" name="aspiracao">
                        <option value="1">Sim</option>
                        <option value="0">Não</option>
                    </select>
                </div>
                <div class="form-group col-md-2">
                    <label for="restauracao">Restauração</label>
                    <select class="form-control" name="restauracao">
                        <option value="1">Sim</option>
                        <option value="0">Não</option>
                    </select>
                </div>
                <div class="form-group col-md-2">
                    <label for="mumificacao">Mumificação</label>
                    <select class="form-control" name="mumificacao">
                        <option value="1">Sim</option>
                        <option value="0">Não</option>
                    </select>
                </div>
                <div class="form-group col-md-2">
                    <label for="higienizacao">Higienização</label>
                    <select class="form-control" name="higienizacao">
                        <option value="1">Sim</option>
                        <option value="0">Não</option>
                    </select>
                </div>
            </div>

            <hr>

            <!-- Cama Ardente -->
            <h4 class="texto-marrom">Cama Ardente</h4>
            <div class="form-row">
                <% ["cortina","tapete","livropre","veleiro","cristo","biblia","cavalete"].forEach(item => { %>
                    <div class="form-group col-md-2">
                        <label><%= item.charAt(0).toUpperCase() + item.slice(1) %></label>
                        <select class="form-control" name="<%= item %>">
                            <option value="1">Sim</option>
                            <option value="0">Não</option>
                        </select>
                    </div>
                <% }) %>
            </div>

            <hr>

            <!-- Contrato -->
            <h4 class="texto-marrom">Contrato</h4>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="valor">Valor</label>
                    <input type="number" step="0.01" class="form-control" name="valor" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="hora">Hora</label>
                    <input type="number" class="form-control" name="hora" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="data">Data</label>
                    <input type="date" class="form-control" name="data" required>
                </div>
            </div>
            <div class="form-group">
                <label for="forma_de_pagamento">Forma de Pagamento</label>
                <select name="forma_de_pagamento" class="form-control" required>
                    <% formasPagamento.forEach(fp => { %>
                        <option value="<%= fp.id %>"><%= fp.descricao %></option>
                    <% }) %>
                </select>
            </div>
            <div class="form-group">
                <label for="cliente">Cliente (Usuário)</label>
                <select name="cliente" class="form-control" required>
                    <% usuarios.forEach(u => { %>
                        <option value="<%= u.id %>"><%= u.username %></option>
                    <% }) %>
                </select>
            </div>

            <button type="submit" class="btn btn-custom">Salvar</button>
        </form>
    </div>
</main>
</body>
</html>
