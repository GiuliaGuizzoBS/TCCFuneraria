<%- include('partials/navbarCliente') %>

<style>
/* CARD */
.feature-card {
  width: 220px;
  height: 300px;
  border: 1px solid #ddd;
  border-radius: 10px;
  padding: 10px;
  background-color: #fff8eb;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  transition: transform 0.2s ease;
}

.feature-card:hover {
  transform: scale(1.02);
}

/* IMAGEM */
.produto-imagem {
  width: 100%;
  height: 130px;
  object-fit: cover;
  border-radius: 8px;
}

/* BOTÃO - mantém a cor original, mas reduzido e alinhado */
.feature-card .btn-marrom {
  font-size: 0.8rem;
  padding: 5px 10px;
  border-radius: 6px;
  width: 100%; /* ocupa o espaço do card */
  margin-top: auto; /* alinha no fim do card */
}

/* GRID - tudo alinhado à esquerda */
.row {
  justify-content: flex-start !important;
  margin-left: 0;
}

/* Ajusta espaçamento entre cards */
.col-md-3 {
  margin-right: 15px;
}
</style>

<h2 class="mt-4 titulo-centralizado"><strong>Funerais</strong></h2>

<div class="container mt-4">
  <div class="row">
    <%
      const lista = Array.isArray(produtos) ? produtos : [];

      const getImg = (p) => (p?.imagem ?? '/img/placeholder.jpg');
      const getNome = (p) => (p?.nome ?? p?.titulo ?? p?.name ?? 'Produto');
      const getDesc = (p) => (p?.descricao ?? p?.descr ?? p?.description ?? '');
      const getPreco = (p) => {
        const v = Number(p?.preco ?? p?.valor ?? p?.price ?? 0);
        return isNaN(v) ? 0 : v;
      };

      const itens = lista.filter(p => (p.categoria ?? '').toLowerCase() === 'funerais');
    %>

    <% if (itens.length > 0) { %>
      <% itens.forEach(produto => { %>
        <div class="col-md-3 mb-4"> <!-- use col-md-3 pra respeitar o grid -->
          <div class="feature-card">
            <img src="<%= getImg(produto) %>" alt="<%= getNome(produto) %>" class="produto-imagem">

            <div class="mt-2">
              <h6 class="text-capitalize texto-marrom mb-1"><%= getNome(produto) %></h6>
              <% if (getDesc(produto)) { %>
                <p class="text-muted mb-1" style="font-size: 0.8rem;"><%= getDesc(produto) %></p>
              <% } %>
              <p class="fw-bold texto-marrom" style="font-size: 0.9rem;">
                R$ <%= getPreco(produto).toFixed(2).replace('.', ',') %>
              </p>
            </div>

            <form action="/pedidos/adicionar" method="POST">
              <input type="hidden" name="produto_id" value="<%= produto.id %>">
              <input type="hidden" name="quantidade" value="1">
              <button type="submit" class="btn btn-marrom">Adicionar</button>
            </form>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="col-12 d-flex justify-content-center mt-4">
        <p class="fw-bold">Nenhum produto de funerais encontrado.</p>
      </div>
    <% } %>
  </div>
</div>
