        html, body {
          height: 100%;
          margin: 0;
          padding: 0;
          overflow-x: hidden;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #d9c8b8;
            color: #4b2e1e;
        }
        .carousel-inner {
                height: 300px;            

        }

        .jumbotron {
            background-color: #fff8eb;
            color: #57330f;
            padding: 2rem 1rem;
            margin-bottom: 2rem;
            border-radius: 0.5rem;
            margin: 20px
        }
        .jumbotron h1 {
            font-size: 2.5rem;
            font-weight: bold;
        }
        
        .btn-custom {
            background-color: #57330f;
            color: white;
            border-radius: 25px;
            padding: 0.75rem 1.5rem;
            font-size: 1.1rem;
            margin-top: 1rem;
            transition: background-color 0.3s ease;
        }
        .btn-custom:hover {
            background-color: #291605; /* marrom mais escuro */
            color: white;
            
        }

        .carousel {
  width: 100%;       /* ocupa 100% da largura do elemento pai */
  max-width: 100vw;  /* não ultrapassa a largura da tela */
  margin: 0;         /* remove margens que podem limitar */
  padding: 0;        /* remove paddings */
  box-sizing: border-box; /* garante que padding/borda não aumentem a largura */
}


.carousel-item {
  height: 100%;
}

.carousel-item img {
  height: 100%;
  width: 100%;
  object-fit: cover; /* faz a imagem preencher sem distorcer */
}

.carousel-overlay {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.55); /* preto 55% transparente */
  z-index: 1;
}

.carousel-control-prev-icon,
.carousel-control-next-icon {
 /* background-color: rgba(0, 0, 0, 0.5);  fundo escuro semi-transparente para as setas */
  color: #ffeede;
  border-radius: 50%;
  width: 3rem;
  height: 3rem;
  box-shadow: none !important;
  border: none !important;
}


.carousel-control-prev,
.carousel-control-next {
  background: none !important;    /* remove o fundo */
  border: none;                   /* remove borda */
  outline: none;                  /* remove outline ao focar */
  box-shadow: none;               /* remove qualquer sombra */
}

@media (max-width: 768px) {
  .carousel {
    height: 200px;
  }
}


         .feature-card {
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-bottom: 1.5rem;
            padding: 1.5rem;
            background-color:#fff8eb;
            text-align: center;
            margin: 1rem;
        }
        .feature-card h3 {
            font-size: 1.5rem;
            margin-bottom: 1rem;
        }

        .feature-card-servicos {
  position: relative;
  border-radius: 15px;
  overflow: hidden;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  margin: 1rem;
  height: 300px;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  color: #d9c8b8
}

/* Efeito hover no card */
.feature-card-servicos:hover {
  transform: scale(1.02);
  box-shadow: 0 10px 20px rgba(0, 0, 0, 0.4);
}

/* Sobreposição preta */
.feature-card-servicos .card-img-overlay {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.35);
  z-index: 1;
  transition: background-color 0.3s ease;
}

/* Escurece mais a sobreposição no hover */
.feature-card-servicos:hover .card-img-overlay {
  background-color: rgba(0, 0, 0, 0.5);
}

/* Conteúdo do card */
.feature-card-servicos .card-content {
  position: relative;
  z-index: 2;
  text-align: center;
  color: #ffeede;
  padding: 1rem;
  
  border-radius: 10px;
  background-color: rgba(0, 0, 0, 0.15);
  transition: background-color 0.3s ease, border-color 0.3s ease;
}

/* Efeito leve no conteúdo no hover */
.feature-card-servicos:hover .card-content {
  background-color: rgba(0, 0, 0, 0.25);

}

.feature-card-servicos .card-content h3,
.feature-card-servicos .card-content p {
  margin: 0.5rem 0;
}

/* Imagens de fundo dos cards */
.card1 {
  background-image: url('/imagens/tapaburaco1.png');
}
.card2 {
  background-image: url('/imagens/tapaburaco2.png');
}
.card3 {
  background-image: url('/imagens/tapaburaco3.png');
}


