  <style>
    html,
    body {
      height: 100%;
      margin: 0;
      padding: 0;
      overflow-x: hidden;
    }

    body {
      font-family: Arial, sans-serif;
      background-color: #d9c8b8;
      color: #4b2e1e;
      display: flex;
      flex-direction: column;
      min-height: 100vh;
    }

    main,
    .container-body {
      flex: 1;
      /* ocupa o espaço restante */
    }

    .carousel-inner {
      height: 300px;

    }

    /* === ESTILO DOS CARDS DE PEDIDOS === */
    .pedido-card {
      background-color: #fff8eb !important;
      /* cor bege suave */
      border: 1px solid #d9c8b8;
      /* borda levemente contrastante */
      border-radius: 15px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .pedido-card:hover {
      transform: scale(1.01);
      box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
    }

    .pedido-card h5 {
      color: #57330f;
    }

    .pedido-card hr {
      border-color: #d9c8b8;
    }


    .jumbotron {
      background-color: #fff8eb;
      color: #57330f;
      padding: 2rem 1rem;
      margin-bottom: 2rem;
      border-radius: 0.5rem;
      margin: 20px
    }

    .jumbotron h1 {
      font-size: 2.5rem;
      font-weight: bold;
    }

    .btn-custom {
      background-color: #57330f;
      color: white;
      border-radius: 25px;
      padding: 0.75rem 1.5rem;
      font-size: 1.1rem;
      margin-top: 1rem;
      transition: background-color 0.3s ease;
    }

    .btn-custom:hover {
      background-color: #291605;
      /* marrom mais escuro */
      color: white;

    }


    .feature-card {
      border-radius: 15px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      margin-bottom: 1.5rem;
      padding: 1.5rem;
      background-color: #fff8eb;
      text-align: center;
      margin: 1rem;
    }

    .feature-card h3 {
      font-size: 1.5rem;
      margin-bottom: 1rem;
    }

    .feature-card-servicos {
      position: relative;
      border-radius: 15px;
      overflow: hidden;
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      margin: 1rem;
      height: 300px;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      color: #d9c8b8
    }

    /* Efeito hover no card */
    .feature-card-servicos:hover {
      transform: scale(1.02);
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.4);
    }

    /* Sobreposição preta */
    .feature-card-servicos .card-img-overlay {
      position: absolute;
      top: 0;
      left: 0;
      height: 100%;
      width: 100%;
      background-color: rgba(0, 0, 0, 0.35);
      z-index: 1;
      transition: background-color 0.3s ease;
    }

    /* Escurece mais a sobreposição no hover */
    .feature-card-servicos:hover .card-img-overlay {
      background-color: rgba(0, 0, 0, 0.5);
    }

    /* Conteúdo do card */
    .feature-card-servicos .card-content {
      position: relative;
      z-index: 2;
      text-align: center;
      color: #ffeede;
      padding: 1rem;

      border-radius: 10px;
      background-color: rgba(0, 0, 0, 0.15);
      transition: background-color 0.3s ease, border-color 0.3s ease;
    }

    /* Efeito leve no conteúdo no hover */
    .feature-card-servicos:hover .card-content {
      background-color: rgba(0, 0, 0, 0.25);

    }

    .feature-card-servicos .card-content h3,
    .feature-card-servicos .card-content p {
      margin: 0.5rem 0;
    }

    /* Imagens de fundo dos cards */
    .card1 {
      background-image: url('/imagens/viagemuruguai.jpg');
    }

    .card2 {
      background-image: url('/imagens/corbelia.jpg');
    }

    .card3 {
      background-image: url('/imagens/homenagem.jpg');
    }


    .navbar-brand {
      font-size: 1.5rem;
      font-weight: bold;
    }

    .btn-marrom {
      background-color: #57330f;
      /* marrom escuro */
      color: white;
      border: none;
    }

    .btn-marrom:hover {
      background-color: #291605;
      /* marrom mais escuro */
      color: white;
    }

    .bg-marrom-claro {
      background-color: #d9c8b8;
      /* tom de amarelo bem clarinho */
    
      
    }

    .bg-marrom-clarinho {
      background-color: #fff8eb;
      /* tom de amarelo bem clarinho */
      color: #57330f
    }

    .texto-marrom {
      color: #57330f;
      /* marrom suave */
    }

