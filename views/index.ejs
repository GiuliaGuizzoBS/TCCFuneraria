      margin-bottom: 1rem;
    }

    .secao-dupla .texto a, .texto2 a {
      color: #fff8eb;
      text-decoration: underline;
    }

     .secao-dupla .imagem {
      width: 300px;
      height: 300px;
      border-radius: 50%;
      position: relative;
      overflow: hidden;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-shrink: 0;
      background: #4a2f1b;
      box-shadow: 0 0 15px #4a2f1b(0,0,0,0.3);
    }

    .secao-dupla .imagem2 {
