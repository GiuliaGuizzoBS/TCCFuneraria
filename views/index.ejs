      background: #3b2514;
      box-shadow: 0 0 15px #3b2514(0,0,0,0.3);
    }


    .secao-dupla .imagem::before {
      content: "";
      position: absolute;
      inset: 0;
     
      opacity: 0.3;
    }


    .secao-dupla .imagem img {
      max-width: 70%;
