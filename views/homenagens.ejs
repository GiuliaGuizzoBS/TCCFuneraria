<%- include('partials/navbarCliente') %>

<h2 class="mt-4 titulo-centralizado"><strong>Homenagens</strong></h2>
<div class="container mt-4">
  <div class="row">
    <% if (produtos.length > 0) { %>
      <% produtos.forEach(produto => { %>
        <div class="col-md-4 mb-4">
          <div class="feature-card h-100 d-flex flex-column justify-content-between">
            <img src="<%= produto.imagem_url ?? '/img/placeholder.jpg' %>" 
                 class="card-img-top rounded" 
                 alt="<%= produto.nome %>" 
                 style="height: 200px; object-fit: cover;">
            <div class="mt-3">
              <h5 class="card-title text-capitalize texto-marrom"><%= produto.nome %></h5>
              <% if (produto.descricao) { %>
                <p class="card-text text-muted"><%= produto.descricao %></p>
              <% } %>
              <p class="card-text fw-bold texto-marrom">
                R$ <%= Number(produto.preco).toFixed(2).replace('.', ',') %>
              </p>
            </div>
            <form action="/pedidos/adicionar" method="POST">
              <input type="hidden" name="produto_id" value="<%= produto.id %>">
              <input type="hidden" name="quantidade" value="1">
              <button type="submit" class="btn btn-marrom mt-3 w-100">Adicionar Ã  homenagem</button>
            </form>
          </div>
        </div>
      <% }); %>
    <% } else { %>
      <div class="col-12 d-flex justify-content-center mt-4">
        <p class="fw-bold">Nenhuma homenagem encontrada.</p>
      </div>
    <% } %>
  </div>
</div>
