<%- include('partials/navbarCliente') %>

<style>
/* === ESTILO DOS CARDS DE PRODUTOS E PEDIDOS === */
.produto-card, .pedido-card {
  background-color: #fff8eb !important;
  border: 1px solid #d9c8b8;
  border-radius: 15px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  padding: 20px;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}
.produto-card:hover, .pedido-card:hover {
  transform: scale(1.01);
  box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
}
.pedido-card h5, .produto-card h5 {
  color: #57330f;
}
.pedido-card hr, .produto-card hr {
  border-color: #d9c8b8;
}
.botoes-pedido {
  display: flex;
  flex-wrap: wrap;
  gap: 15px;
  justify-content: flex-start;
}
.botoes-pedido .btn {
  width: auto;
  min-width: 150px;
}
/* === ALERTA DE SUCESSO === */
.alerta {
  background-color: #fff3e0; /* creme claro */
  color: #57330f; /* marrom escuro */
  border: 1px solid #d9c8b8;
  padding: 10px 20px;
  border-radius: 10px;
  margin: 20px auto;
  max-width: 800px;
  text-align: center;
}
.alerta a {
  color: #6a3d13; /* tom marrom mais escuro para links */
  text-decoration: underline;
}

</style>

<% if (sucesso) { %>
  <div class="alerta">
    Agora espere um atendente entrar em contato com você 
    ou <a href="https://wa.me/5548996190900"><strong>clique aqui</strong></a> para começar uma conversa.
  </div>
<% } %>

<h2 class="mt-4 titulo-centralizado"><strong>Pedidos Esperando Confirmação</strong></h2>

<div class="container mt-4">
  <% if (produtos.length > 0) { %>
    <% produtos.forEach(produto => { %>
      <div class="produto-card mb-3">
        <h5 class="texto-marrom"><%= produto.nome %></h5>
        <p><%= produto.descricao %></p>
        <p class="fw-bold texto-marrom">
          R$ <%= Number(produto.preco).toFixed(2) %> x <%= produto.quantidade %>
        </p>
        <form action="/pedidos/remover" method="POST">
          <input type="hidden" name="produto_id" value="<%= produto.id %>">
          <button type="submit" class="btn btn-marrom btn-sm mt-2">Remover</button>
        </form>
      </div>
    <% }) %>

    <div class="botoes-pedido mt-3">
      <form action="/formulario" method="GET">
        <button type="submit" class="btn btn-marrom">Finalizar Pedido</button>
      </form>
      <a href="/servicos" class="btn btn-marrom">Continuar Comprando</a>
    </div>
  <% } else { %>
    <p class="text-center fw-bold mt-4">Nenhum produto no seu carrinho.</p>
  <% } %>
</div>

<h2 class="mt-4 titulo-centralizado texto-marrom"><strong>Seus Pedidos</strong></h2>

<div class="container mt-4">
  <% if (confirmados.length > 0) { %>
    <% confirmados.forEach(p => { %>
      <div class="pedido-card mb-3">
        <h5 class="texto-marrom"><%= new Date(p.criado_em).toLocaleDateString() %></h5>
       
        <a href="/pedidos/<%= p.pedido_id %>" class="btn btn-marrom">Visualizar</a>
      </div>
    <% }) %>
  <% } else { %>
    <p class="text-center fw-bold mt-4">Nenhum pedido encontrado.</p>
  <% } %>
</div>
