<style>

   .bg-marrom-claro {
      background-color: #d9c8b8;
      /* tom de amarelo bem clarinho */
    }

    .bg-marrom-clarinho {
      background-color: #fff8eb;
      /* tom de amarelo bem clarinho */
      color: #57330f
    }

 

   /* Mantém layout flex apenas em telas grandes */
@media (min-width: 992px) {

  #navbarNav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
  }

       .carrinho {
      margin-right: 20px;
      border-radius: 25px;
      transition: background-color 0.3s ease;
      text-align: center;
    }

    .carrinho:hover {
      background-color: #57330f;
      /* marrom mais escuro */
      color: white;
      transition: background-color 0.3s ease;
    }
}

@media (max-width: 991.98px) {
  .carrinho {
    text-align: left;
    background-color: transparent;
    color: black !important;
  }

  .navbar-nav .nav-link.carrinho {
    color: black !important;
  }
}


    
    .carrinho-texto {
      color: #4b2e1e;
      /* marrom elegante */
      font-weight: 500;
      text-decoration: none;
      transition: color 0.3s ease;
    }

    .carrinho-texto:hover {
      color: #2d1a10;
      /* tom mais escuro ao passar o mouse */
    }

      .texto-marrom {
      color: #57330f;
      /* marrom suave */
    }

    .navbar-nav .nav-link {
      color: #57330f !important;
      /* marrom suave */
    }


    .navbar-nav .nav-link:hover {
      color: #291605 !important;
      /* marrom mais forte ao passar o mouse */
    }

    .navbar {
      border-bottom: #4b2e1e 1px solid;
    }

      .navbar-brand {
      font-size: 1.5rem;
      font-weight: bold;
    }

    .btn-marrom {
      background-color: #57330f;
      /* marrom escuro */
      color: white;
      border: none;
    }

    .btn-marrom:hover {
      background-color: #291605;
      /* marrom mais escuro */
      color: white;
    }

    .bg-marrom-claro {
      background-color: #d9c8b8;
      /* tom de amarelo bem clarinho */
    }

    
    .btn-custom {
      background-color: #57330f;
      color: white;
      border-radius: 25px;
      padding: 0.75rem 1.5rem;
      font-size: 1.1rem;
      margin-top: 1rem;
      transition: background-color 0.3s ease;
    }

    .btn-custom:hover {
      background-color: #291605;
      /* marrom mais escuro */
      color: white;

    }



</style>
<nav class="navbar navbar-expand-lg navbar-light bg-marrom-claro">
  <a class="navbar-brand" href="/">
    <img src="<%= '/imagens/pombabrancalogo.png' %>" alt="Pomba Branca" width="80" height="40">

  </a>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav w-100">
      <li class="nav-item">
        <a class="nav-link" href="/">Inicio</a>
      </li>

      <li class="nav-item">
        <a class="nav-link" href="/servicos">Serviços</a>
      </li>


      <li class="nav-item">
        <a class="nav-link" href="/contato">Contato</a>
      </li>
     
      <li class="nav-item">
        <a class="nav-link" href="/sobre">Sobre</a>
      </li>
 

      <!-- Carrinho dentro do menu (aparece só em telas pequenas) -->
      <li class="nav-item d-lg-none">
        <a class="nav-link carrinho" href="/pedidos">Pedidos</a>
      </li>
    </ul>
<!-- Carrinho fora do menu (aparece só em telas grandes) -->
<% if (session && session.user) { %>
  <a class="nav-link carrinho-texto ms-auto" href="/logout">Logout</a>
<% } else { %>
  <a class="nav-link carrinho-texto ms-auto" href="/login">Login</a>
<% } %>

<a class="nav-link bg-marrom-clarinho carrinho d-none d-lg-block ms-auto" href="/pedidos">Pedidos</a>

  </div>
</nav>

<script>
  $(function() {
    $('.navbar-collapse').on('click', '.nav-link:not(.dropdown-toggle), .dropdown-item', function() {
      $('.navbar-collapse').collapse('hide');
    });
  });
</script>

