<style>
  /* ======= BODY ======= */
  body {
    background-color: #57330f;
    margin: 0;
    font-family: 'Arial', sans-serif;
  }

  /* ======= CONTAINER ======= */
  .container { 
      margin-top: 2%;
      margin-bottom: 2%;
      padding: 2rem;
      border-radius: 20px;
      background-color: #d9c8b8;
  }

  /* ======= IMAGEM ======= */
  .imagemsobre {
      border-radius: 10px;
      border: 1px solid #291605;
      width: 100%;
      height: 100%;
      object-fit: cover;
  }

  /* ======= TEXTOS ======= */
  .texto-marromjust { 
      color: #57330f;
      text-align: justify;
      line-height: 1.6;
      margin-bottom: 1rem;
  }

  .texto-marrommeio {
      color: #57330f;
      line-height: 1.4;
  }

  /* ======= TITULOS ======= */
  .titulo {
      text-align: left;
      font-size: 2.2rem;
      margin-bottom: 1.5rem;
  }

  .titulo-centralizado {
      text-align: center;
      font-size: 2rem;
      margin-bottom: 2rem;
  }

  /* ======= BOTOES EXISTENTES ======= */
  .btn-secoesinicio {
      background-color: #fff8eb;
      color: #3b2514 !important;
      border: none;
      border-radius: 10px;
      padding: 10px 25px;
      text-align: center;
      text-decoration: none !important;
      font-weight: 600;
      transition: all 0.3s ease;
      display: inline-block;
      cursor: pointer;
  }

  .btn-secoesinicio:hover {
      background-color: #3b2514;
      color: #fff8eb !important;
      text-decoration: none;
      transform: scale(1.03);
      border: solid 1px #ffeede;
  }

  .btn-vejamais {
      width: 300px;
  }

  /* ======= SEÇÃO LOCALIZAÇÃO ======= */
  .secao-localizacao {
      margin-top: 3rem;
      margin-bottom: 3rem;
      text-align: center;
  }

  .secao-localizacao h3 {
      font-size: 1.8rem;
      margin-bottom: 1rem;
      color: #57330f;
  }

  .secao-localizacao p {
      color: #57330f;
      line-height: 1.6;
      margin-bottom: 1.5rem;
  }

  /* Mapa com overlay semi-transparente */
  .mapa-local {
      position: relative;
      width: 100%;
      height: 350px;
      border-radius: 15px;
      overflow: hidden;
      margin: 0 auto;
  }

  .mapa-local iframe {
      width: 100%;
      height: 100%;
      border: 0;
  }

  .mapa-local::after {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(59, 37, 20, 0.4);
      pointer-events: none;
  }

  /* ======= BOTÕES INFORMATIVOS “QUEM SOMOS” E “NOSSO COMPROMISSO” ======= */
  .btn-secao-info {
      background-color: #fff8eb;
      color: #3b2514 !important;
      border: none;
      border-radius: 10px;
      padding: 20px;
      text-align: left;
      text-decoration: none !important;
      font-weight: 600;
      transition: all 0.3s ease;
      display: block;
      cursor: pointer;
      margin-bottom: 1.5rem;
  }

  .btn-secao-info:hover {
      background-color: #3b2514;
      color: #fff8eb !important;
      transform: scale(1.03);
      text-decoration: none;
  }

  /* ======= RESPONSIVIDADE ======= */
  @media (max-width: 992px) {
      .row.align-items-stretch {
          flex-direction: column;
      }

      .titulo {
          text-align: center;
          font-size: 1.9rem;
      }
  }

  @media (max-width: 768px) {
      .texto-marromjust, .texto-marrommeio {
          text-align: center;
          margin-top: 1rem;
      }

      .imagemsobre {
          height: auto;
          margin-bottom: 1.5rem;
      }

      .titulo-centralizado {
          font-size: 1.7rem;
      }
  }
</style>

