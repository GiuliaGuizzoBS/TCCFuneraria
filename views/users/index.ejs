<head>
  <style>
    body {
      background-color: #d9c8b8;
      margin: 0;
      padding: 0;
    }

    .usuarios-container {
      background-color: #fff8eb;
      border: 1px solid #d9c8b8;
      border-radius: 15px;
      padding: 2rem;
      margin: 2rem auto;
      max-width: 1000px;
      box-shadow: 0 2px 8px rgba(87, 51, 15, 0.1);
    }

    .titulo-centralizado {
      text-align: center;
      color: #57330f;
      margin-bottom: 1.5rem;
    }

    table {
      background-color: #fff8eb;
      border-radius: 10px;
      overflow: hidden;
      width: 100%;
      border-collapse: collapse;
    }

    th {
      background-color: #d9c8b8;
      color: #57330f;
      text-align: center;
      padding: 0.8rem;
    }

    td {
      vertical-align: middle !important;
      color: #57330f;
      text-align: center;
      padding: 0.8rem;
    }

    tr:nth-child(even) {
      background-color: #f3e7d8;
    }

    tr:hover {
      background-color: #eeddcc;
    }

    .button-group {
      display: flex;
      justify-content: center;
      gap: 0.3rem;
    }

    /* ====== BOTÕES PADRONIZADOS ====== */
    .btn-marrom, .btn-danger {
      border: none;
      border-radius: 8px;
      padding: 0.6rem 1.2rem;
      font-weight: 500;
      text-decoration: none;
      width: 120px; /* tamanho padronizado */
      display: inline-block;
      text-align: center;
      transition: background-color 0.2s;
    }

    .btn-marrom {
      background-color: #57330f;
      color: #fff;
    }

    .btn-marrom:hover {
      background-color: #6a3d13;
      color: #fff;
    }

    .btn-danger {
      background-color: #b54a3a;
      color: #fff;
    }

    .btn-danger:hover {
      background-color: #99372a;
    }

    form {
      display: inline;
    }

    .text-center {
      text-align: center;
    }
/* ====== RESPONSIVIDADE ====== */
@media (max-width: 768px) {
  .container-form,
  .usuarios-container,
  .detalhes-container {
    padding: 1.2rem;
    margin: 1rem;
    max-width: 95%;
  }

  table {
    display: block;
    width: 100%;
    overflow-x: auto;
    border-radius: 10px;
  }

  th, td {
    padding: 0.6rem;
    font-size: 0.9rem;
    white-space: nowrap;
  }

  .button-group {
    flex-direction: column;
    align-items: center;
    gap: 0.8rem; /* espaçamento maior entre botões */
  }

  .btn-marrom,
  .btn-voltar,
  .btn-danger,
  .btn-warning {
    width: 100%;
    max-width: 250px;
    margin-bottom: 0.5rem; /* adiciona espaço extra */
  }

  form {
    width: 100%;
  }

  input, select {
    width: 100%;
    box-sizing: border-box;
  }
}

@media (max-width: 480px) {
  h2.titulo-centralizado {
    font-size: 1.3rem;
  }

  label {
    font-size: 0.9rem;
  }

  p {
    font-size: 0.9rem;
  }

  .btn-marrom,
  .btn-voltar,
  .btn-danger,
  .btn-warning {
    max-width: 100%;
  }
}


  </style>
</head>

<%- include('../partials/navbar') %>

<div class="usuarios-container">
  <h2 class="titulo-centralizado"><strong>Lista de Usuários</strong></h2>

  <table class="table">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Regra</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody id="userTableBody">
      <% users.forEach(user => { %>
        <tr>
          <td><%= user.username %></td>
          <td><%= user.role %></td>
          <td>
            <div class="button-group">
              <a href="/users/<%= user.id %>" class="btn-marrom">View</a>
              <a href="/users/<%= user.id %>/edit" class="btn-marrom">Edit</a>
             
              </form>
            </div>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<script>
  document.getElementById('search')?.addEventListener('input', function() {
    const searchValue = this.value;
    fetch(`/users/search?search=${encodeURIComponent(searchValue)}`)
      .then(response => response.json())
      .then(data => {
        const tbody = document.getElementById('userTableBody');
        tbody.innerHTML = '';
        data.users.forEach(user => {
          const tr = document.createElement('tr');
          tr.innerHTML = `
            <td>${user.username}</td>
            <td>${user.role}</td>
            <td>
              <div class="button-group">
                <a href="/users/${user.id}" class="btn-marrom">View</a>
                <a href="/users/${user.id}/edit" class="btn-marrom">Edit</a>
                <form action="/arquivados/arquivar" method="POST" style="display:inline;">
                  <input type="hidden" name="tipo" value="usuario">
                  <input type="hidden" name="alvo_id" value="${user.id}">
                  <button type="submit" class="btn-danger">Arquivar</button>
                </form>
              </div>
            </td>
          `;
          tbody.appendChild(tr);
        });
      })
      .catch(error => console.error('Error:', error));
  });
</script>
