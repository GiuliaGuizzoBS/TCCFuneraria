<head>
  <style>
    /* fundo igual ao navbar */
    body {
      background-color: #d9c8b8;
      margin: 0;
      padding: 0;
    }

    /* card central */
    .usuarios-container {
      background-color: #fff8eb;
      border: 1px solid #d9c8b8;
      border-radius: 15px;
      padding: 2rem;
      margin: 2rem auto;
      max-width: 1000px;
      box-shadow: 0 2px 8px rgba(87, 51, 15, 0.1);
    }

    .titulo-centralizado {
      text-align: center;
      color: #57330f;
      margin-bottom: 1.5rem;
    }

    /* tabela */
    table {
      background-color: #fff8eb;
      border-radius: 10px;
      overflow: hidden;
      width: 100%;
    }

    th {
      background-color: #d9c8b8;
      color: #57330f;
      text-align: center;
    }

    td, th {
      vertical-align: middle !important;
      color: #57330f;
      text-align: center;
    }

    tr:nth-child(even) {
      background-color: #f3e7d8;
    }

    tr:hover {
      background-color: #eeddcc;
    }

    /* botões */
    .button-group {
      display: flex;
      justify-content: center;
      gap: 0.3rem;
    }

    .button-group .btn,
    .button-group button {
      width: 80px;
      text-align: center;
      padding: 0.4rem 0.5rem;
      white-space: nowrap;
    }

    /* botão marrom padrão */
    .btn-marrom {
      background-color: #57330f;
      color: #fff;
      border: none;
      border-radius: 8px;
      text-decoration: none;
    }

    .btn-marrom:hover {
      background-color: #6a3d13;
      color: #fff;
    }

    .btn-danger {
      background-color: #b54a3a;
      color: #fff;
      border: none;
      border-radius: 8px;
      padding: 0.4rem 0.5rem;
    }

    .btn-danger:hover {
      background-color: #99372a;
      color: #fff;
    }

    .text-center {
      text-align: center;
    }

    form {
      display: inline;
    }
  </style>
</head>

<%- include('../partials/navbar') %>

<div class="usuarios-container">
  <h2 class="titulo-centralizado"><strong>Lista de Usuários</strong></h2>

  <!-- Tabela -->
  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Nome</th>
        <th>Regra</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody id="userTableBody">
      <% users.forEach(user => { %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.username %></td>
          <td><%= user.role %></td>
          <td>
            <div class="button-group">
              <a href="/users/<%= user.id %>" class="btn btn-marrom">View</a>
              <a href="/users/<%= user.id %>/edit" class="btn btn-marrom">Edit</a>
              <form action="/arquivados/arquivar" method="POST">
                <input type="hidden" name="tipo" value="usuario">
                <input type="hidden" name="alvo_id" value="<%= user.id %>">
                <button type="submit" class="btn btn-danger">Arquivar</button>
              </form>
            </div>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
<script>
  document.getElementById('search')?.addEventListener('input', function() {
    const searchValue = this.value;

    fetch(`/users/search?search=${encodeURIComponent(searchValue)}`)
      .then(response => response.json())
      .then(data => {
        const tbody = document.getElementById('userTableBody');
        tbody.innerHTML = ''; // limpa a tabela antes de adicionar os resultados

        data.users.forEach(user => {
          const tr = document.createElement('tr');
          tr.innerHTML = `
            <td>${user.id}</td>
            <td>${user.username}</td>
            <td>${user.role}</td>
            <td>
              <div class="button-group">
                <a href="/users/${user.id}" class="btn btn-marrom">View</a>
                <a href="/users/${user.id}/edit" class="btn btn-marrom">Edit</a>
                <form action="/arquivados/arquivar" method="POST" style="display:inline;">
                  <input type="hidden" name="tipo" value="usuario">
                  <input type="hidden" name="alvo_id" value="${user.id}">
                  <button type="submit" class="btn btn-danger">Arquivar</button>
                </form>
              </div>
            </td>
          `;
          tbody.appendChild(tr);
        });
      })
      .catch(error => console.error('Error:', error));
  });
</script>
