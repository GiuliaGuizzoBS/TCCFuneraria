<head>
  <style>
    body {
      background-color: #d9c8b8;
      margin: 0;
      padding: 0;
    }

    .detalhes-container {
      background-color: #fff8eb;
      border: 1px solid #d9c8b8;
      border-radius: 15px;
      padding: 2rem;
      margin: 2rem auto;
      max-width: 700px;
      box-shadow: 0 2px 8px rgba(87, 51, 15, 0.1);
    }

    .titulo-centralizado {
      text-align: center;
      color: #57330f;
      margin-bottom: 1.5rem;
    }

    p {
      color: #57330f;
      font-size: 1.05rem;
      margin-bottom: 0.6rem;
    }

    strong {
      color: #6a3d13;
    }

    /* ====== BOTÕES PADRONIZADOS ====== */
    .btn-marrom, .btn-danger {
      border: none;
      border-radius: 8px;
      padding: 0.6rem 1.2rem;
      font-weight: 500;
      text-decoration: none;
      width: 120px; /* tamanho padronizado */
      display: inline-block;
      text-align: center;
      transition: background-color 0.2s;
      margin: 0 0.3rem;
    }

    .btn-marrom {
      background-color: #57330f;
      color: #fff;
    }

    .btn-marrom:hover {
      background-color: #6a3d13;
      color: #fff;
    }

    .btn-danger {
      background-color: #b54a3a;
      color: #fff;
    }

    .btn-danger:hover {
      background-color: #99372a;
    }

    .text-center {
      text-align: center;
    }

    form {
      display: inline;
    }
/* ====== RESPONSIVIDADE ====== */
@media (max-width: 768px) {
  .container-form,
  .usuarios-container,
  .detalhes-container {
    padding: 1.2rem;
    margin: 1rem;
    max-width: 95%;
  }

  table {
    display: block;
    width: 100%;
    overflow-x: auto;
    border-radius: 10px;
  }

  th, td {
    padding: 0.6rem;
    font-size: 0.9rem;
    white-space: nowrap;
  }

  .button-group {
    flex-direction: column;
    align-items: center;
    gap: 0.8rem; /* espaçamento maior entre botões */
  }

  .btn-marrom,
  .btn-voltar,
  .btn-danger,
  .btn-warning {
    width: 100%;
    max-width: 250px;
    margin-bottom: 0.5rem; /* adiciona espaço extra */
  }

  form {
    width: 100%;
  }

  input, select {
    width: 100%;
    box-sizing: border-box;
  }
}

@media (max-width: 480px) {
  h2.titulo-centralizado {
    font-size: 1.3rem;
  }

  label {
    font-size: 0.9rem;
  }

  p {
    font-size: 0.9rem;
  }

  .btn-marrom,
  .btn-voltar,
  .btn-danger,
  .btn-warning {
    max-width: 100%;
  }
}

  </style>
</head>

<%- include('../partials/navbar') %>

<div class="detalhes-container">
  <h2 class="titulo-centralizado"><strong>Detalhes do Usuário</strong></h2>
  <p><strong>Nome:</strong> <%= user.username %></p>
  <p><strong>Regra:</strong> <%= user.role %></p>

  <div class="text-center mt-4">
    <a href="/users" class="btn-marrom">Voltar </a>
    <a href="/users/<%= user.id %>/edit" class="btn-marrom">Editar</a>
    <form action="/users/<%= user.id %>?_method=DELETE" method="POST">
      <button type="submit" class="btn-danger">Arquivar</button>
    </form>
  </div>
</div>
