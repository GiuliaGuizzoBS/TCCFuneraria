<head>
  <style>
    /* fundo geral agora igual ao navbar */
    body {
      background-color: #d9c8b8; /* mesmo tom do navbar */
      margin: 0;
      padding: 0;
    }

    /* card central */
    .produtos-container {
      background-color: #fff8eb; /* mantém o tom claro do card */
      border: 1px solid #d9c8b8;
      border-radius: 15px;
      padding: 2rem;
      margin: 2rem auto;
      max-width: 1000px;
      box-shadow: 0 2px 8px rgba(87, 51, 15, 0.1);
    }

    .titulo-centralizado {
      text-align: center;
      color: #57330f;
      margin-bottom: 1.5rem;
    }

    .button-group {
      display: flex;
      justify-content: flex-end;
      gap: 0.3rem;
    }

    .button-group .btn,
    .button-group button {
      width: 80px;
      text-align: center;
      padding: 0.4rem 0.5rem;
      white-space: nowrap;
    }

    table {
      background-color: #fff8eb;
      border-radius: 10px;
      overflow: hidden;
    }

    th {
      background-color: #d9c8b8;
      color: #57330f;
    }

    td, th {
      vertical-align: middle !important;
      color: #57330f;
    }

    tr:nth-child(even) {
      background-color: #f3e7d8;
    }

    tr:hover {
      background-color: #eeddcc;
    }
  </style>
</head>


<%- include('../partials/navbar') %>

<div class="produtos-container">
  <h2 class="titulo-centralizado"><strong>Lista de produtos</strong></h2>

  <!-- Filtro -->
  <form method="GET" action="/produtos" class="mb-3">
    <div class="form-group">
      <label for="categoria">Filtrar por Categoria:</label>
      <select id="categoria" name="categoria" class="form-control" style="max-width:300px;">
        <option value="">Todas as Categorias</option>
        <% if (Array.isArray(categorias)) { %>
          <% categorias.forEach(categoria => { %>
            <option value="<%= categoria.id %>" <%= (categoriaSelecionada == categoria.id) ? 'selected' : '' %>>
              <%= categoria.nome %>
            </option>
          <% }) %>
        <% } %>
      </select>
    </div>
    <button type="submit" class="btn btn-marrom mt-2">Filtrar</button>
  </form>

  <!-- Tabela -->
  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Nome</th>
        <th>Descrição</th>
        <th>Preço</th>
        <th>Quantidade</th>
        <th>Categoria</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% if (Array.isArray(produtos) && produtos.length > 0) { %>
        <% produtos.forEach(produto => { %>
          <tr>
            <td><%= produto.id %></td>
            <td><%= produto.nome %></td>
            <td><%= produto.descricao %></td>
            <td>R$ <%= Number(produto.preco).toFixed(2).replace('.', ',') %></td>
            <td><%= produto.quantidade %></td>
            <td><%= produto.categoria_nome ?? produto.categoria %></td>
            <td>
              <div class="button-group">
                <!-- Visualizar -->
                <a href="/produtos/<%= produto.id %>" class="btn btn-marrom">View</a>

                <!-- Editar -->
                <a href="/produtos/<%= produto.id %>/edit" class="btn btn-marrom">Edit</a>

                <!-- Form único para ações que enviam POST/DELETE (não aninhar forms) -->
                <form action="/arquivados/arquivar" method="POST" style="display:inline; margin:0;">
                  <input type="hidden" name="tipo" value="produto">
                  <input type="hidden" name="alvo_id" value="<%= produto.id %>">
                  <button type="submit" class="btn btn-danger">Arquivar</button>
                </form>

                <!-- Se você tiver rota de deletar via form (DELETE), pode manter outro form separado -->
                
              </div>
            </td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td colspan="7" class="text-center">Nenhum produto cadastrado.</td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>
