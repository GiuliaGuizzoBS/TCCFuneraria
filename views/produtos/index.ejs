<head>
  <style>
    .button-group {
      display: flex;
      justify-content: flex-end;
      gap: 0.3rem;
    }
    .button-group .btn,
    .button-group button {
      width: 80px;
      text-align: center;
      padding: 0.4rem 0.5rem;
      white-space: nowrap;
    }
  </style>
</head>

<%- include('../partials/navbar') %>

<h1>Lista de produtos</h1>

<!-- Formulário de filtro por categoria -->
<form method="GET" action="/produtos" class="mb-3">
  <div class="form-group">
    <label for="categoria">Filtrar por Categoria:</label>
    <select id="categoria" name="categoria" class="form-control" style="max-width:300px;">
      <option value="">Todas as Categorias</option>
      <% if (Array.isArray(categorias)) { %>
        <% categorias.forEach(categoria => { %>
          <option value="<%= categoria.id %>" <%= (categoriaSelecionada == categoria.id) ? 'selected' : '' %>><%= categoria.nome %></option>
        <% }) %>
      <% } %>
    </select>
  </div>
  <button type="submit" class="btn btn-marrom mt-2">Filtrar</button>
</form>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Preço</th>
      <th>Quantidade</th>
      <th>Categoria</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% if (Array.isArray(produtos) && produtos.length > 0) { %>
      <% produtos.forEach(produto => { %>
        <tr>
          <td><%= produto.id %></td>
          <td><%= produto.nome %></td>
          <td><%= produto.descricao %></td>
          <td>R$ <%= Number(produto.preco).toFixed(2).replace('.', ',') %></td>
          <td><%= produto.quantidade %></td>
          <td><%= produto.categoria_nome ?? produto.categoria %></td>
          <td>
            <div class="button-group">
              <a href="/produtos/<%= produto.id %>" class="btn btn-marrom">View</a>
              <a href="/produtos/<%= produto.id %>/edit" class="btn btn-marrom">Edit</a>
              <form action="/produtos/<%= produto.id %>?_method=DELETE" method="POST" style="display:inline;">
                <button type="submit" class="btn btn-danger">Delete</button>
              </form>
            </div>
          </td>
        </tr>
      <% }) %>
    <% } else { %>
      <tr>
        <td colspan="7" class="text-center">Nenhum produto cadastrado.</td>
      </tr>
    <% } %>
  </tbody>
</table>
