<head>
  <style>
    body {
      background-color: #d9c8b8;
      margin: 0;
      padding: 0;
    }

    .produtos-container {
      background-color: #fff8eb;
      border: 1px solid #d9c8b8;
      border-radius: 15px;
      padding: 2rem;
      margin: 2rem auto;
      max-width: 1000px;
      box-shadow: 0 2px 8px rgba(87, 51, 15, 0.1);
    }

    .titulo-centralizado {
      text-align: center;
      color: #57330f;
      margin-bottom: 1.5rem;
    }

    table {
      background-color: #fff8eb;
      border-radius: 10px;
      overflow: hidden;
      width: 100%;
      border-collapse: collapse;
      display: block;
      overflow-x: auto; /* scroll horizontal em telas pequenas */
    }

    th, td {
      text-align: center;
      padding: 0.8rem;
      color: #57330f;
      white-space: nowrap;
    }

    th {
      background-color: #d9c8b8;
    }

    tr:nth-child(even) {
      background-color: #f3e7d8;
    }

    tr:hover {
      background-color: #eeddcc;
    }

    .button-group {
      display: flex;
      justify-content: center;
      flex-wrap: wrap;
      gap: 0.4rem;
    }

    img.produto-img {
      width: 60px;
      height: 60px;
      object-fit: cover;
      border-radius: 8px;
      border: 1px solid #d9c8b8;
    }

    /* ====== BOTÕES PADRONIZADOS ====== */
    .btn-marrom, .btn-danger {
      border: none;
      border-radius: 8px;
      padding: 0.6rem 1.2rem;
      font-weight: 500;
      text-decoration: none;
      min-width: 100px;
      text-align: center;
      transition: background-color 0.2s;
    }

    .btn-marrom {
      background-color: #57330f;
      color: #fff;
    }

    .btn-marrom:hover {
      background-color: #6a3d13;
    }

    .btn-danger {
      background-color: #b54a3a;
      color: #fff;
    }

    .btn-danger:hover {
      background-color: #99372a;
    }

    /* ===== RESPONSIVIDADE ===== */
    @media (max-width: 768px) {
      .produtos-container {
        padding: 1rem;
        margin: 1rem;
      }

      table {
        font-size: 0.9rem;
      }

      th, td {
        padding: 0.5rem;
      }

      .btn-marrom, .btn-danger {
        padding: 0.4rem 0.8rem;
        font-size: 0.85rem;
      }
    }

    @media (max-width: 480px) {
      .titulo-centralizado {
        font-size: 1.2rem;
      }

      .btn-marrom, .btn-danger {
        width: 100%;
      }

      .button-group {
        flex-direction: column;
        align-items: stretch;
      }
    }
  </style>
</head>


<%- include('../partials/navbar') %>

<div class="produtos-container">
  <h2 class="titulo-centralizado"><strong>Lista de produtos</strong></h2>

  <!-- Filtro -->
  <form method="GET" action="/produtos" class="mb-3">
    <div class="form-group">
      <label for="categoria">Filtrar por Categoria:</label>
      <select id="categoria" name="categoria" class="form-control" style="max-width:300px;">
        <option value="">Todas as Categorias</option>
        <% if (Array.isArray(categorias)) { %>
          <% categorias.forEach(categoria => { %>
            <option value="<%= categoria.id %>" <%= (categoriaSelecionada == categoria.id) ? 'selected' : '' %>><%= categoria.nome %></option>
          <% }) %>
        <% } %>
      </select>
    </div>
    <button type="submit" class="btn-marrom mt-2">Filtrar</button>
  </form>

  <!-- Tabela -->
  <table class="table">
    <thead>
      <tr>
        <th>Imagem</th>
        <th>Nome</th>
        <th>Descrição</th>
        <th>Preço</th>
        <th>Quantidade</th>
        <th>Categoria</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% if (Array.isArray(produtos) && produtos.length > 0) { %>
        <% produtos.forEach(produto => { %>
          <tr>
            <td>
              <% if (produto.imagem) { %>
                <img src="<%= produto.imagem %>" alt="Imagem do produto" class="produto-img">
              <% } else { %>
                <span>Sem imagem</span>
              <% } %>
            </td>
            <td><%= produto.nome %></td>
            <td><%= produto.descricao %></td>
            <td>R$ <%= Number(produto.preco).toFixed(2).replace('.', ',') %></td>
            <td><%= produto.quantidade %></td>
            <td><%= produto.categoria_nome ?? produto.categoria %></td>
            <td>
              <div class="button-group">
                <a href="/produtos/<%= produto.id %>" class="btn-marrom">View</a>
                <a href="/produtos/<%= produto.id %>/edit" class="btn-marrom">Edit</a>
                <form action="/arquivados/arquivar" method="POST">
                  <input type="hidden" name="tipo" value="produto">
                  <input type="hidden" name="alvo_id" value="<%= produto.id %>">
                  <button type="submit" class="btn-danger">Arquivar</button>
                </form>
              </div>
            </td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td colspan="8" class="text-center">Nenhum produto cadastrado.</td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>
