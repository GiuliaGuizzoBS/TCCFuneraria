<%- include('partials/navbarCliente') %>

<style>
/* CARD */
.feature-card {
  width: 220px;
  height: 300px;
  border: 1px solid #ddd;
  border-radius: 10px;
  padding: 10px;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  transition: transform 0.2s ease;
}

.feature-card:hover {
  transform: scale(1.02);
}

/* IMAGEM */
.produto-imagem {
  width: 100%;
  height: 130px;
  object-fit: cover;
  border-radius: 8px;
}

/* BOTÃO */
.feature-card .btn-marrom {
  font-size: 0.8rem;
  padding: 5px 10px;
  border-radius: 6px;
  width: 100%;
  margin-top: auto;
}

/* ALINHAMENTO À ESQUERDA */
.row {
  justify-content: flex-start !important;
  margin-left: 0;
}

/* Espaço entre cards */
.col-md-3 {
  margin-right: 15px;
}
</style>

<h2 class="mt-4 titulo-centralizado"><strong>Arranjos Florais</strong></h2>

<div class="container mt-4">
  <div class="row">
    <% if (produtos.length > 0) { %>
      <% produtos.forEach(produto => { %>
        <div class="col-md-3 mb-4">
          <div class="feature-card">
            <img 
              src="<%= produto.imagem ?? '/img/placeholder.jpg' %>" 
              alt="<%= produto.nome %>" 
              class="produto-imagem">

            <div class="mt-2">
              <h6 class="text-capitalize texto-marrom mb-1"><%= produto.nome %></h6>
              <% if (produto.descricao) { %>
                <p class="text-muted mb-1" style="font-size: 0.8rem;"><%= produto.descricao %></p>
              <% } %>
              <p class="fw-bold texto-marrom" style="font-size: 0.9rem;">
                R$ <%= Number(produto.preco).toFixed(2).replace('.', ',') %>
              </p>
            </div>

            <form action="/pedidos/adicionar" method="POST">
              <input type="hidden" name="produto_id" value="<%= produto.id %>">
              <input type="hidden" name="quantidade" value="1">
              <button type="submit" class="btn btn-marrom">Adicionar</button>
            </form>
          </div>
        </div>
      <% }); %>
    <% } else { %>
      <div class="col-12 d-flex justify-content-center mt-4">
        <p class="fw-bold">Nenhum produto de flores encontrado.</p>
      </div>
    <% } %>
  </div>
</div>
