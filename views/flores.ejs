<%- include('partials/navbarCliente') %>
<h2 class="mt-4 titulo-centralizado"><strong>Arranjos Florais</strong></h2>
<div class="container mt-4">
  <div class="row">
    <% if (produtos.length > 0) { %>
      <% produtos.forEach(produto => { %>
        <div class="col-md-4 mb-4">
          <div class="feature-card h-100 d-flex flex-column justify-content-between">
            <img src="<%= produto.imagem_url %>" class="card-img-top rounded" alt="<%= produto.nome %>" style="height: 200px; object-fit: cover;">
            <div class="mt-3">
              <h5 class="card-title text-capitalize texto-marrom"><%= produto.nome %></h5>
              <p class="card-text text-muted"><%= produto.descricao %></p>
              <p class="card-text fw-bold texto-marrom">R$ <%= Number(produto.preco).toFixed(2) %></p>
            </div>
            <a href="#" class="btn btn-marrom mt-3 w-100">Adicionar ao pedido</a>
          </div>
        </div>
      <% }); %>
    <% } else { %>
      <p class="text-center">Nenhum produto encontrado na categoria flores.</p>
    <% } %>
  </div>
</div>
